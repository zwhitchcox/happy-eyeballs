{
  "compilerOptions": {
    "typeRoots": ["./typings"],
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declaration": true,
  },
  "include": ["./src/*.ts"],
}
